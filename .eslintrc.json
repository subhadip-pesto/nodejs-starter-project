{
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "es2020": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off"
  },
  "globals": {
    "__dirname": true
  }
}
